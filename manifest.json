{
    "manifest_version": 3,
    "name": "Underdog Bet Exporter",
    "version": "1.0.1",
    "description": "Bet result exporter for parlays on Underdog",
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_icon": {
          "16": "images/icon16.png",
          "32": "images/icon32.png"
        },
        "default_title": "Underdog Bet Exporter",
        "default_popup": "popup.html"
    }
}
